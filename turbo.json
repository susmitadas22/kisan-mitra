{
    "$schema": "https://turbo.build/schema.json",
    "remoteCache": {
        "enabled": true
    },
    "ui": "stream",
    "tasks": {
        "build": {
            "outputs": ["dist"]
        },
        "start": {
            "dependsOn": ["build"],
            "env": ["NODE_ENV=production"]
        },
        "format": {},
        "lint": {},
        "start:dev": {
            "cache": false,
            "persistent": true
        }
    }
}
